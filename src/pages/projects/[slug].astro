---
import {
	Breadcrumb,
	BreadcrumbItem,
	BreadcrumbLink,
	BreadcrumbList,
	BreadcrumbSeparator,
} from "@/components/ui/breadcrumb";
import ProjectLayout from "@/layouts/ProjectLayout.astro";
import CodeGroupWrapper from "@/plugins/code-group/CodeGroupWrapper.astro";
import { getCollection, render, type CollectionEntry } from "astro:content";
import { Earth, Github, Gitlab, NewspaperIcon } from "lucide-react";
import { DateTime } from "luxon";
import config from "../../../portfolio.config";
import ReadMoreWrapper from "../../lib/plugins/read-more/ReadMoreWrapper.astro";
import { Badge } from "@/components/ui/badge";

interface Props {
	element: CollectionEntry<"project">;
}

export async function getStaticPaths() {
	const contents = await getCollection("project", (post) => {
		if (import.meta.env.DEV) {
			return true;
		}
		
		if (post.data.publishedAt && new Date(post.data.publishedAt) > new Date()) {
			return false;
		} else if (!post.data.isAvailable) {
			return false;
		}

		return true;
	});
	return contents.map((item) => ({
		params: { slug: item.data.permalink, publishedAt: item.data.publishedAt ? new Date(item.data.publishedAt).toDateString() : null },
		props: { element: item },
	}));
}

const { element } = Astro.props;
const { Content, headings } = await render(element);

const availableHeadings = headings.filter((heading) =>
	[2, 3].includes(heading.depth),
);

type HeadingNode = {
	depth: number;
	slug: string;
	text: string;
	children: HeadingNode[];
};

function buildHeadingTree(headings: typeof availableHeadings): HeadingNode[] {
	const result: HeadingNode[] = [];
	let currentH2: HeadingNode | null = null;

	for (const heading of headings) {
		const node: HeadingNode = {
			depth: heading.depth,
			slug: heading.slug,
			text: heading.text,
			children: [],
		};

		if (heading.depth === 2) {
			currentH2 = node;
			result.push(node);
		} else if (heading.depth === 3 && currentH2) {
			currentH2.children.push(node);
		}
	}

	return result;
}

const headingTree = buildHeadingTree(availableHeadings);
---

<ProjectLayout title={element.data.title} description={element.data.description} thumbnail={{ image: element.data.logo, alt: element.data.title, width: 64, height: 64 }}>
	<div class="flex flex-col gap-4">
		<div class="relative border-b py-8">
			<div
				class="mb-2.5 text-sm font-semibold gap-1.5 flex flex-col gap-y-8 items-start"
			>
				<div class="mb-2.5">
					<Breadcrumb>
						<BreadcrumbList>
							<BreadcrumbItem>
								<BreadcrumbLink
									className="flex items-center gap-2 text-muted-foreground"
									href="/projects"
								>
									<NewspaperIcon className="size-4" />
									Projects
								</BreadcrumbLink>
							</BreadcrumbItem>
							<BreadcrumbSeparator />
							<BreadcrumbItem>
								<BreadcrumbLink
									className="text-primary"
									href={`/projects/${element.data.permalink}`}
								>
									{element.data.title}
								</BreadcrumbLink>
							</BreadcrumbItem>
						</BreadcrumbList>
					</Breadcrumb>
				</div>

				{
					element.data.publishedAt && (
						<div class="flex items-center space-x-2">
							<span class="text-primary">Published at</span>
							<span class="text-muted-foreground">
								Â·&nbsp;&nbsp;
								<time>
									{DateTime.fromJSDate(
										new Date(element.data.publishedAt),
									).toFormat("dd/MM/yyyy")}
								</time>
							</span>
						</div>
					)
				}
			</div>
			<div>
				<div
					class="flex flex-row items-center gap-4"
				>
					{
						element.data.logo && (
							<div class="rounded-lg w-12 h-12">
								<img
									src={element.data.logo}
									alt={element.data.title}
									class="w-12 h-12 object-cover rounded-lg"
								/>
							</div>
						)
					}
					<h1 class="text-4xl sm:text-4xl text-pretty font-medium">
						{element.data.title}
					</h1>
				</div>
				<div class="text-lg text-pretty text-muted-foreground max-w-4xl mt-4">
					{element.data.description}
				</div>
				<div class="mt-8 flex flex-wrap items-center gap-6">
					{
						element.data.contributors?.map((key) => {
							const currentAuthor = config.authors[key];
							return (
								<div
									data-orientation="horizontal"
									class="relative group/user flex items-center gap-2"
								>
									<span class="inline-flex items-center justify-center select-none overflow-hidden rounded-full align-middle bg-(--ui-bg-elevated) size-8 text-base shrink-0 transform transition-transform duration-200 group-hover/user:scale-115">
										<img
											width="32"
											height="32"
											alt={currentAuthor.name}
											class="h-full w-full rounded-[inherit] object-cover"
											src={currentAuthor.avatar}
										/>
									</span>
									<div class="">
										<a
											href={currentAuthor.href}
											tabindex="-1"
											rel="noopener noreferrer"
											aria-label={currentAuthor.name}
											class="focus:outline-none peer"
										>
											<span class="absolute inset-0" aria-hidden="true" />
										</a>
										<p class="font-medium text-(--ui-text) peer-hover:text-(--ui-text-highlighted) transition-colors text-sm">
											{currentAuthor.name}
										</p>
										<p class="text-muted-foreground transition-colors text-xs">
											@{key}
										</p>
									</div>
								</div>
							);
						})
					}
				</div>
			</div>
		</div>

		<div class="flex justify-between gap-10 w-full">
			<div class="w-full max-w-4xl">
				<div class="prose">
					<Content components={{ CodeGroupWrapper, ReadMoreWrapper }} />
				</div>
			</div>
			<aside class="hidden xl:block w-64">
				<div class="sticky top-14 p-4 overflow-y-auto h-[calc(100vh-4rem)]">
					<p
						class="group text-sm font-semibold flex-1 items-center gap-1.5 py-1.5 -mt-1.5 focus-visible:outline-primary hidden lg:flex"
					>
						<span class="truncate">On this page</span>
					</p>

					<ul class="min-w-0 ms-2.5 ps-4 border-s border-gray-300">
						{
							headingTree.map((heading) => (
								<li>
									<a
										href={`#${heading.slug}`}
										class="group relative text-sm flex items-center focus-visible:outline-primary py-1 text-muted-foreground hover:text-primary transition-colors"
									>
										{heading.text}
									</a>
									<ul class="ms-3">
										{heading.children.map((child) => (
											<li class="min-w-0 -ms-px">
												<a
													href={`#${child.slug}`}
													class="group relative text-sm flex items-center focus-visible:outline-primary py-1 text-muted-foreground hover:text-primary transition-colors"
												>
													<span class="truncate">{child.text}</span>
												</a>
											</li>
										))}
									</ul>
								</li>
							))
						}
					</ul>

					{
						element.data.links && (element.data.links.website || element.data.links.github || element.data.links.gitlab) && (
							<>
								<p class="group text-sm font-semibold flex-1 items-center gap-1.5 mt-8 focus-visible:outline-primary hidden lg:flex">
									<span class="truncate">Links</span>
								</p>
								<ul class="min-w-0">
									{element.data.links.github && <li class="mt-2"><a href={element.data.links.github} class="flex flex-row items-center gap-2" target='_blank'><Github className="inline w-6 h-6 text-foreground" />Github</a></li>}
                					{element.data.links.gitlab && <li class="mt-2"><a href={element.data.links.gitlab} class="flex flex-row items-center gap-2" target='_blank'><Gitlab className="inline w-6 h-6 text-foreground" />Gitlab</a></li>}
									{element.data.links.website && <li class="mt-2"><a href={element.data.links.website} class="flex flex-row items-center gap-2" target='_blank'><Earth className="inline w-6 h-6 text-foreground" />Website</a></li>}
								</ul>
							</>
						)
					}

					{
						element.data.tags && element.data.tags.length > 0 && (
							<>
								<p class="group text-sm font-semibold flex-1 items-center gap-1.5 mt-8 focus-visible:outline-primary hidden lg:flex">
									<span class="truncate">Tags</span>
								</p>
								<div class="min-w-0 mt-2 flex flex-wrap items-center gap-2">
									{element.data.tags.map((tag) => (
										<Badge variant="outline" className="text-xs" key={tag}>
											{tag}
										</Badge>
									))}
								</div>
							</>
						)
					}
				</div>
			</aside>
		</div>
	</div>
</ProjectLayout>
